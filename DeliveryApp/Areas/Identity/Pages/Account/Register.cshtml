@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<head>
    <link rel="stylesheet" href="/css/Registration.css" />
</head>

<div class="row">

    <div class="register_model col-md-4">

        <form class="form_registration" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="input__box form-floating mb-3">
                <input asp-for="Input.Email" class="form__input form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="input__box form-floating mb-3">
                <input asp-for="Input.Name" class="form__input form-control" placeholder="Name" />
                <label asp-for="Input.Name">Name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="input__box form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form__input form-control" placeholder="Phone Number" />
                <label asp-for="Input.PhoneNumber">PhoneNumber</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="input__box form-floating mb-3">
                <input asp-for="Input.Password" class="form__input form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="input__box form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form__input form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="input__box form-floating mb-3">
                <input asp-for="Input.StreetAddress" class="form__input form-control" placeholder="StreetAddress" />
                <label asp-for="Input.StreetAddress">StreetAddress</label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
            <div class="input__box form-floating mb-3">
                <input asp-for="Input.City" class="form__input form-control" placeholder="City" />
                <label asp-for="Input.City">City</label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>

            <div class="input__box form-floating mb-3">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form__input form-select">
                    <option disabled selected>-Select Role-</option>
                </select>
            </div>

            <button id="registerSubmit" type="submit" class="btn_modal w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
